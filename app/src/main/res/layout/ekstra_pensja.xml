<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="22"
    android:rowCount="23"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_weight="1"
        android:id="@+id/ekstraPensjaWybierzDateTetView"
        android:text="Wybierz datę początkową i końcową"
        android:layout_columnSpan="22"
        android:layout_row="0"
        android:layout_column="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Start"
        android:inputType="date"
        android:layout_columnSpan="10"
        android:id="@+id/ekstraPensjaDataPierwszegoEditText"
        android:layout_row="2"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Koniec"
        android:inputType="date"
        android:layout_columnSpan="10"
        android:id="@+id/ekstraPensjaDataOstaniegoEditText"
        android:layout_row="2"
        android:layout_column="12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ekstraPensjaPodajLiczbyTextView"
        android:text="Podaj swoje liczby"
        android:layout_columnSpan="22"
        android:layout_row="3"
        android:layout_column="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja1Liczba"
        android:layout_row="4"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja2Liczba"
        android:layout_row="4"
        android:layout_column="4" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja3Liczba"
        android:layout_row="4"
        android:layout_column="7" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja4Liczba"
        android:layout_row="4"
        android:layout_column="10" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja5Liczba"
        android:layout_row="4"
        android:layout_column="13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ekstraPensjaIloscLiczbTextView"
        android:text="Ile liczb zaznaczyles"
        android:layout_columnSpan="22"
        android:layout_row="7"
        android:layout_column="0"/>

    <RadioGroup
        android:id="@+id/ekstraPensjaGrupa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="21">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:checked="true"
            android:id="@+id/ekstraPensja1Radio" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/ekstraPensja2Radio" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/ekstraPensja3Radio"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/ekstraPensja4Radio"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/ekstraPensjaPodajOstatniaTextView"
        android:text="Podaj dodatkowa liczbe"
        android:layout_columnSpan="22"
        android:layout_row="11"
        android:layout_column="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja6Liczba"
        android:layout_row="14"
        android:layout_column="1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja7Liczba"
        android:visibility="invisible"
        android:layout_row="14"
        android:layout_column="4" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_rowSpan="3"
        android:id="@+id/ekstraPensja8Liczba"
        android:visibility="invisible"
        android:layout_row="14"
        android:layout_column="7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/ekstraPensjaCancelButton"
        android:layout_weight="1"
        android:layout_columnSpan="10"
        android:layout_row="18"
        android:layout_column="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_columnSpan="8"
        android:id="@+id/ekstraPensjaSaveButton"
        android:onClick="saveekstraPensjaNumbers"
        android:layout_weight="1"
        android:layout_row="18"
        android:layout_column="13"/>
</GridLayout>
